<body>
    <header> 
        <nav class="navbar container">
            <picture class="navbar__logo">
                <a href="/src/views/index.ejs">
                    <img src="/public/img/icons/branding/logo_light_horizontal.svg" alt="Isologotipo Funkoshop">
                </a>
            </picture>

            <ul class="navbar__menu">
                <li class="navbar__item">
                    <a class="navbar__link" href="/src/views/shop/shop.ejs">VER TIENDA</a>
                </li>
                <li class="navbar__item">
