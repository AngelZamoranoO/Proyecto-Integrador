<%- include('./partials/header.ejs') %>
    <section class="hero"> <!-- Inicio Hero -->
        <article class="hero__content container"> 
            <h3 class="hero__title">Nuevos Ingresos</h3>
            <p class="hero__text">Descubrí el próximo Funko Pop de tu colección</p>
            <a class="hero__link" href="/src/views/shop/shop.ejs">SHOP</a>
        </article>
    </section>  <!-- Fin Hero -->
    <main class="main-container"> 
            <section class="collection container"> <!-- Inicio Colecciones -->
                <article class="collection__content">
                    <h3 class="collection__title">Star Wars & The Mandalorian</h3>
                    <p class="collection__text">Disfruta de una saga que sigue agregando personajes a su colección.</p>
                    <a class="collection__link" href="/src/views/shop/shop.ejs">VER COLECCIÓN</a>
                </article>
                <picture class="collection__cover">
                    <img src="/img/star-wars/baby-yoda-1.webp" alt="figura coleccionable funko baby yoda">
                </picture>
            </section>
            <section class="collection container">
                <article class="collection__content">
                    <h3 class="collection__title">POKEMON INDIGO</h3>
                    <p class="collection__text">Atrapa todos los que puedas y disfruta de una colección llena de amigos.</p>
                    <a class="collection__link" href="/src/views/shop/shop.ejs">VER COLECCIÓN</a>
                </article>
                <picture class="collection__cover">
                    <img src="/img/pokemon/vulpix-1.webp" alt="figura coleccionable funko vulpix pokemon">
                </picture>
            </section>
            <section class="collection container">
                <article class="collection__content">
                    <h3 class="collection__title">HARRY POTTER</h3>
                    <p class="collection__text">Revive los recuerdos de una saga llena de magia y encanto.</p>
                    <a class="collection__link" href="/src/views/shop/shop.ejs">VER COLECCIÓN</a>
                </article>
                <picture class="collection__cover">
                    <img src="/img/harry-potter/snape-patronus-1.webp" alt="figura coleccionable funko snape harry potter">
                </picture>
            </section> <!-- Fin Colecciones -->
            <section class="slider container glide"> <!-- Inicio Slider -->
                <h2 class="slider__title">Últimos lanzamientos</h2>
                <div class="glide__track" data-glide-el="track">
                    <ul class="slider__items glide__slides">
                        <li class="slider__item glide__slide">
                        <article class="card-item">
                            <a class="card-item__link" href=""></a>
                            <picture class="card-item__cover">
                            <span class="card-item__tag">Nuevo</span>
                                <img class="card-item__img--front" src="/img/star-wars/trooper-1.webp" alt="trooper star wars">
                                <img class="card-item__img--back" src="/img/star-wars/trooper-box.webp" alt="trooper star wars en caja">
                            </picture>
                            <div class="card-item__content">
                                <p class="card-item__licence">STAR WARS</p>
                                <h4 class="card-item__name">STORMTROOPER LIGHTSABER</h4>
                                <p class="card-item__price">$ 1799,99</p>
                                <p class="card-item__promo">3 CUOTAS SIN INTERÉS</p>
                            </div>
                        </article>
                        </li>
                        <li class="slider__item glide__slide">
                        <article class="card-item">
                            <a class="card-item__link" href=""></a>
                            <picture class="card-item__cover">
                            <span class="card-item__tag">Nuevo</span>
                                <img class="card-item__img--front" src="/img/pokemon/pidgeotto-1.webp" alt="pidgeotto pokemon">
                                <img class="card-item__img--back" src="/img/pokemon/pidgeotto-box.webp" alt="pidgeotto pokemon en caja">
                            </picture class="card-item__cover">
                            <div class="card-item__content">
                                <p class="card-item__licence">POKEMON</p>
                                <h4 class="card-item__name">PIDGEOTTO</h4>
                                <p class="card-item__price">$ 1799,99</p>
                                <p class="card-item__promo">3 CUOTAS SIN INTERÉS</p>
                            </div>
                        </article>
                        </li>
                        <li class="slider__item glide__slide">
                        <article class="card-item">
                            <a class="card-item__link" href=""></a>
                            <picture class="card-item__cover">
                            <span class="card-item__tag">Nuevo</span>
                                <img class="card-item__img--front" src="/img/harry-potter/luna-1.webp" alt="luna harry potter">
                                <img class="card-item__img--back" src="/img/harry-potter/luna-box.webp" alt="luna harry potter en caja">
                            </picture class="card-item__cover">
                            <div class="card-item__content">
                                <p class="card-item__licence">HARRY POTTER</p>
                                <h4 class="card-item__name">LUNA LOVEGOOD LION MASK</h4>
                                <p class="card-item__price">$ 1799,99</p>
                                <p class="card-item__promo">3 CUOTAS SIN INTERÉS</p>
                            </div>
                        </article>
                        </li>
                    </ul>
                </div>
                <div class="glide__arrows" data-glide-el="controls">
                    <button class="glide__arrow glide__arrow--left" data-glide-dir="<"><iconify-icon icon="majesticons:chevron-left"></iconify-icon></button>
                    <button class="glide__arrow glide__arrow--right" data-glide-dir=">"><iconify-icon icon="majesticons:chevron-right"></iconify-icon></button>
                </div>                  
            </section> <!-- Fin Slider -->
        </section>
    </main>
    <%- include('./partials/footer.ejs') %>
</body>
</html>