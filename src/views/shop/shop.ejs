<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> SHOP | FUNKOSHOP</title>
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/css/glide.core.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/css/glide.theme.min.css">
</head>


<%- include('../partials/header') %>
    <main>
        <aside class="main-aside">
            <div class="aside-search">
                <h2 class="aside-search__text">BUSCAR</h2>
                <input type="search" name="buscar" class="aside-search__input" placeholder="ítem o categoria">
            </div>

            <div class="aside-order">
                <h2 class="aside-order__text">ORDENAR POR</h2>
                <form action="" id="aside-order__form">
                    <select name="ordenar" class="aside-order__form-select" placeholder="Mayor o menor">
                        <option value=""></option>
                        <option value="">Mayor a menor</option>
                        <option value="">Menor a mayor</option>
                        <option value="">Nuevo</option>
                    </select>
                </form>
            </div>

            <div class="aside-price">
                <h2 class="aside-price__text">PRECIO</h2>
                <form action="" id="form" class="aside-price__form">
                    <label for="min" class="aside-price__label">MIN</label>
                    <input type="number" name="min" id="min" class="aside-price__min-max">
                    <p class="aside-price__label">-</p>
                    <label for="max" class="aside-price__label">MAX</label>
                    <input type="number" name="max" id="max" class="aside-price__min-max">
                </form>
            </div>

            <div class="aside-filter">
                <h2 class="aside-filter__text">FILTRAR</h2>
                <form action="" id="filter" class="aside-filter__form">
                    <input type="checkbox" name="new" id="filter-new">
                    <label for="new" class="aside-filter__label">NUEVOS</label><br>
                    <input type="checkbox" name="offers" id="filter-offers">
                    <label for="offers" class="aside-filter__label">OFERTAS</label><br>
                    <input type="checkbox" name="special" id="filter-special">
                    <label for="special" class="aside-filter__label">EDICIÓN ESPECIAL</label><br>
                    <input type="checkbox" name="favorites" id="filter-favorites">
                    <label for="favorites" class="aside-filter__label">FAVORITOS</label>
                </form>
            </div>
        </aside>
        <section class="shop__content">
            <ul class="shop__items">
                <% data.forEach( item=> { %>

                    <li class="slider__item glide__slide">
                        <article class="card-item">
                            <a class="card-item__link" href="">
                                <picture class="card-item__cover">
                                    <span class="card-item__tag">Nuevo</span>
                                    <img class="card-item__img--front" src="<%= item.img_front %>"
                                        alt="Figura coleccionable Funko de un Pidgeotto">
                                    <img class="card-item__img--back" src="<%= item.img_back %>"
                                        alt="Figura coleccionable Funko de un Pidgeotto en caja">
                                </picture>
                                <div class="card-item__content">
                                    <p class="card-item__licence">"<%= item.category_name %>"</p>
                                    <h4 class="card-item__name">"<%= item.product_name %>"</h4>
                                    <p class="card-item__price">"<%= item.product_price %>"</p>
                                    <p class="card-item__promo">3 CUOTAS SIN INTERÉS</p>
                                </div>
                            </a>
                        </article>
                    </li>

                    <% }) %>


            </ul>

            <div class="glide__arrows" data-glide-el="controls">
                <button class="glide__arrow glide__arrow--left" data-glide-dir="<"><iconify-icon
                        icon="ic:baseline-chevron-left"></iconify-icon></button>
                <button class="glide__arrow glide__arrow--right" data-glide-dir=">"><iconify-icon
                        icon="ic:baseline-chevron-right"></iconify-icon></button>
            </div>
        </section>
    </main>

    <%- include('../partials/footer') %>

        <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>



</html>